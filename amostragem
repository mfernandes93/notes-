/* Inventário + Amostragem de CNPJ (com validação do formato novo) */
SET NOCOUNT ON;

IF OBJECT_ID('tempdb..#targets')  IS NOT NULL DROP TABLE #targets;
IF OBJECT_ID('tempdb..#summary')  IS NOT NULL DROP TABLE #summary;
IF OBJECT_ID('tempdb..#examples') IS NOT NULL DROP TABLE #examples;

CREATE TABLE #targets (
  SchemaName sysname,
  TableName  sysname,
  ColumnName sysname,
  DataType   sysname,
  MaxLen     int
);

INSERT INTO #targets (SchemaName, TableName, ColumnName, DataType, MaxLen)
SELECT s.name, t.name, c.name, ty.name, c.max_length
FROM sys.tables t
JOIN sys.schemas s ON s.schema_id = t.schema_id
JOIN sys.columns c ON c.object_id = t.object_id
JOIN sys.types ty ON ty.user_type_id = c.user_type_id
WHERE c.name COLLATE SQL_Latin1_General_CP1_CI_AS LIKE '%cnpj%'
   OR c.name COLLATE SQL_Latin1_General_CP1_CI_AS LIKE '%cgc%'
   OR c.name COLLATE SQL_Latin1_General_CP1_CI_AS LIKE '%cgccpf%'
   OR c.name COLLATE SQL_Latin1_General_CP1_CI_AS LIKE '%cpf_cnpj%'
   OR c.name COLLATE SQL_Latin1_General_CP1_CI_AS LIKE '%inscricaofederal%';

CREATE TABLE #summary (
  SchemaName   sysname,
  TableName    sysname,
  ColumnName   sysname,
  DataType     sysname,
  Total        bigint,
  Distintos    bigint,
  MinLen       int,
  MaxLen       int,
  QtdInvalidos bigint,
  QtdInvalidosFormatoNovo bigint
);

CREATE TABLE #examples (
  SchemaName sysname,
  TableName  sysname,
  ColumnName sysname,
  Valor      nvarchar(512),
  Tamanho    int,
  Motivo     varchar(64)
);

DECLARE @Schema sysname, @Table sysname, @Col sysname, @Type sysname, @sql nvarchar(max);

DECLARE cur CURSOR FAST_FORWARD FOR
  SELECT SchemaName, TableName, ColumnName, DataType
  FROM #targets
  ORDER BY SchemaName, TableName, ColumnName;

OPEN cur; 
FETCH NEXT FROM cur INTO @Schema, @Table, @Col, @Type;

WHILE @@FETCH_STATUS = 0
BEGIN
  SET @sql = N'
  DECLARE @norm  TABLE (v nvarchar(256), L int);
  DECLARE @inval TABLE (v nvarchar(256), L int);

  INSERT INTO @norm(v, L)
  SELECT TRY_CONVERT(nvarchar(256), ' + QUOTENAME(@Col) + N'),
         LEN(TRY_CONVERT(nvarchar(256), ' + QUOTENAME(@Col) + N'))
  FROM ' + QUOTENAME(@Schema) + N'.' + QUOTENAME(@Table) + N';

  INSERT INTO @inval(v, L)
  SELECT v, L
  FROM @norm
  WHERE v IS NULL
     OR L <> 14
     OR v COLLATE SQL_Latin1_General_CP1_CI_AS LIKE ''%[^0-9A-Z]%''; 

  INSERT INTO #summary (SchemaName, TableName, ColumnName, DataType, Total, Distintos, MinLen, MaxLen, QtdInvalidos, QtdInvalidosFormatoNovo)
  SELECT ' + QUOTENAME(@Schema,'''') + N',
         ' + QUOTENAME(@Table,'''')  + N',
         ' + QUOTENAME(@Col,'''')    + N',
         ' + QUOTENAME(@Type,'''')   + N',
         (SELECT COUNT(*) FROM @norm),
         (SELECT COUNT(DISTINCT v) FROM @norm),
         (SELECT MIN(L) FROM @norm),
         (SELECT MAX(L) FROM @norm),
         (SELECT COUNT(*) FROM @inval),
         (SELECT COUNT(*) FROM @norm 
            WHERE v IS NOT NULL 
              AND (L <> 14 
                   OR v COLLATE SQL_Latin1_General_CP1_CI_AS NOT LIKE ''[0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9][0-9]'')
          );

  INSERT INTO #examples (SchemaName, TableName, ColumnName, Valor, Tamanho, Motivo)
  SELECT TOP (20)
         ' + QUOTENAME(@Schema,'''') + N',
         ' + QUOTENAME(@Table,'''')  + N',
         ' + QUOTENAME(@Col,'''')    + N',
         v, L,
         CASE WHEN v IS NULL THEN ''Nulo''
              WHEN L <> 14 THEN ''Tamanho diferente de 14''
              WHEN v COLLATE SQL_Latin1_General_CP1_CI_AS LIKE ''%[^0-9A-Z]%'' THEN ''Caractere fora de [0-9A-Z]''
              WHEN v COLLATE SQL_Latin1_General_CP1_CI_AS NOT LIKE ''[0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9][0-9]'' THEN ''Não segue formato novo''
              ELSE ''Outro'' END
  FROM (SELECT DISTINCT v, L FROM @norm) x
  WHERE v IS NULL
     OR L <> 14
     OR v COLLATE SQL_Latin1_General_CP1_CI_AS LIKE ''%[^0-9A-Z]%''
     OR v COLLATE SQL_Latin1_General_CP1_CI_AS NOT LIKE ''[0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9A-Z][0-9][0-9]'';';
  
  EXEC sys.sp_executesql @sql;

  FETCH NEXT FROM cur INTO @Schema, @Table, @Col, @Type;
END
CLOSE cur; DEALLOCATE cur;

-- Resumo
SELECT * FROM #summary
ORDER BY SchemaName, TableName, ColumnName;

-- Exemplos inválidos
SELECT * FROM #examples
ORDER BY SchemaName, TableName, ColumnName, Motivo;
